    },
    "node": {
      "name": "Run Node Template",
      "command": "npm start node -- --no-watch",
      "runAtStart": true
    },
    "next": {
      "name": "Run Next Template",
      "command": "npm start next -- --no-watch",
      "runAtStart": true
    },
    "vanilla": {
      "name": "Run Vanilla Template",
      "command": "npm start vanilla -- --no-watch",
      "runAtStart": true
    }
  }
}
